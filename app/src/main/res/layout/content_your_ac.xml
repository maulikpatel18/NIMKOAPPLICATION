<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nimako.YourAc"
    tools:showIn="@layout/app_bar_yourac"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="2dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:clickable="true"
                card_view:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/order_his_det"
                        android:scaleType="fitXY" />

                    <!--<view-->
                    <!--android:layout_width="2dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_margin="3dp"/>-->

                    <TextView
                        android:id="@+id/line1"
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="1dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="#000" />
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnail"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Order History and Details"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textStyle="bold"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_margin="5dp"
                android:elevation="2dp"
                card_view:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/addinac"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/addinac"
                        android:scaleType="fitXY" />
                    <TextView
                        android:id="@+id/line3"
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="1dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/txtaddinac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnail"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="My Address"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_margin="5dp"
                android:elevation="2dp"
                card_view:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/pdetailinac"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/piinac"
                        android:scaleType="fitXY" />
                    <TextView
                        android:id="@+id/line4"
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="1dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/txtpdetailinac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnail"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="My Personal Information"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:elevation="2dp"
                android:clickable="true"
                card_view:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/wishinac"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/dilinac"
                        android:scaleType="fitXY" />
                    <TextView
                        android:id="@+id/line5"
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="1dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/txtwishinac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnail"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="My Wishlists"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="asdsafsasfdfasdaf"/>-->
</LinearLayout>